<body>
<%- include('../includes/nav')%>
    <div class="container main text-info registerpage ">
        <div id="errMsg" class="centered">

        </div>
        <form  class='centered' action="/register" method="POST">
            <label for="email">Enter Your Email</label>
            <input  class="form-control  mr-sm-2" placeholder="Email" type="email" name="email" id='email'>
            <label for="email">Enter Mobile No.</label>
            <input  class="form-control mr-sm-2" placeholder="Mobile Number" type="number" pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}" name="mobile" id='mobile'>
            <label for="password">Enter Password</label>
            <input class="form-control mr-sm-2" type="password" placeholder="Password" name='password' id='password'>
            <label for="confirmPassword">Confirm Password</label>
            <input class="form-control mr-sm-2" type="password" placeholder="Confirm Password" name="confirmPassword" id="confirmPassword">
            <button class='btn registerbtn bg-info' id='register'type="submit">Sign Up</button>
        </form>
        <a class='btn ' href="/login">Login</a>
    </div>
<%- include('../includes/footer')%>
